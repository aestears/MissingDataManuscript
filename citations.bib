@article{hensley_evaluating_nodate,
	title = {Evaluating spatiotemporal variation in water chemistry of the upper {Colorado} {River} using longitudinal profiling},
	volume = {n/a},
	copyright = {© 2019 John Wiley \& Sons Ltd},
	issn = {1099-1085},
