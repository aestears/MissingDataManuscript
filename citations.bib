@article{mulholland_inter-biome_2001,
	title = {Inter-biome comparison of factors controlling stream metabolism},
	volume = {46},
	issn = {1365-2427},
	url = {http://onlinelibrary.wiley.com/doi/abs/10.1046/j.1365-2427.2001.00773.x},
