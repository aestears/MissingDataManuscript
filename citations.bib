	journal = {Geoderma},
	author = {Forsmann, Ditte M. and Kjaergaard, Charlotte},
	month = jul,
	year = {2014},
	keywords = {Iron:phosphorus ratio, Peat, Phosphorus release, Preferential flow, Redox dynamic, Wetland restoration},
