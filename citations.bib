	journal = {JAWRA Journal of the American Water Resources Association},
	author = {Brennan, R. B. and Scott, J. T. and Sharpley, A. N. and Lally, H. T. and Jarvie, H. P. and Bowes, M. J. and Haggard, B. E. and Gbur, E.},
