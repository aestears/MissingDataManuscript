@article{crawford_long-term_2020,
	title = {Long-{Term} {Trends} in {Acid} {Precipitation} and {Watershed} {Elemental} {Export} {From} an {Alpine} {Catchment} of the {Colorado} {Rocky} {Mountains}, {USA}},
