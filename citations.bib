@article{helman_fractionation_2005,
	title = {Fractionation of the {Three} {Stable} {Oxygen} {Isotopes} by {Oxygen}-{Producing} and {Oxygen}-{Consuming} {Reactions} in {Photosynthetic} {Organisms}},
