	number = {05},
	urldate = {2020-02-25},
	journal = {Journal of Environmental Protection},
	author = {Rogers, Chris W. and Sharpley, Andrew N. and Haggard, Brian E. and Scott, J. Thad and Drake, Bodie M.},
